- provide(:title, @title)
.row
  %aside.span4.sidebar
    %section.sidebar__section
      = gravatar_for @user
      %h1= @user.name
      %span= link_to 'view my profile', @user
      %span
        %b Microposts:
        = @user.microposts.count
    %section.sidebar__section
      = render 'shared/stats'
    %section.sidebar__section
      - if @users.any?
        .user-avatars
          - @users.each do |user|
            = link_to gravatar_for(user, size: 30), user
  .span8
    %h3= @title
    - if @users.any?
      %ol.users
        = render @users
      = will_paginate